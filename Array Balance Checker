#include <stdio.h>

int main() {
    int N;
    scanf("%d", &N);

    int arr[N];
    
    // Read array elements
    for(int i = 0; i < N; i++) {
        scanf("%d", &arr[i]);
    }

    int sum1 = 0, sum2 = 0;

    // Sum of first half
    for(int i = 0; i < N / 2; i++) {
        sum1 += arr[i];
    }

    // Sum of second half
    for(int i = N / 2; i < N; i++) {
        sum2 += arr[i];
    }

    if(sum1 == sum2)
        printf("BALANCED\n");
    else
        printf("NOT BALANCED\n");

    return 0;
}
